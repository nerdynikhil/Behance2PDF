{
  "manifest_version": 3,
  "name": "Behance2PDF",
  "version": "1.0.0",
  "description": "Save Behance projects as high-quality PDFs with original layout and images",
  "permissions": ["activeTab", "scripting", "downloads"],
  "host_permissions": [
    "https://www.behance.net/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [{
    "matches": ["https://www.behance.net/gallery/*"],
    "js": ["html2pdf.bundle.min.js", "content.js"],
    "css": ["styles.css"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 